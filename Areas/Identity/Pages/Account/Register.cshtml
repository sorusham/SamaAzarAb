@page
@model MessageForAzarab.Areas.Identity.Pages.Account.RegisterModel
@using MessageForAzarab.Models

@{
    ViewData["Title"] = "ثبت‌نام";
}

<div class="container mt-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>
                        ثبت‌نام در سیستم
                    </h2>
                </div>
                <div class="card-body p-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">ایمیل</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="رمز عبور" />
                                    <label asp-for="Input.Password">رمز عبور</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="تکرار رمز عبور" />
                                    <label asp-for="Input.ConfirmPassword">تکرار رمز عبور</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.FullName" class="form-control" placeholder="نام و نام خانوادگی" />
                            <label asp-for="Input.FullName">نام و نام خانوادگی</label>
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <select asp-for="Input.UserType" class="form-select">
                                <option value="@UserType.Expert">کارشناس</option>
                                <option value="@UserType.Company">شرکت</option>
                                <option value="@UserType.BusinessMember">عضو بازرگانی</option>
                            </select>
                            <label asp-for="Input.UserType">نوع کاربر</label>
                        </div>
                        
                        <div class="form-floating mb-4">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="شماره تماس" />
                            <label asp-for="Input.PhoneNumber">شماره تماس</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button id="registerSubmit" type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-person-check-fill me-2"></i>
                                ثبت‌نام
                            </button>
                        </div>
                        
                        <div class="text-center">
                            <div>
                                قبلاً ثبت‌نام کرده‌اید؟ 
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">ورود به سیستم</a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center py-3">
                    <div class="small">سیستم مدیریت نامه‌های مهندسی &copy; 1404</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 