@model MessageForAzarab.Models.BaseDocument

@{
    ViewData["Title"] = "حذف مدرک";
}

<div class="container-fluid fade-in">
    <!-- هدر صفحه -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-trash-fill text-danger fs-1 me-3"></i>
            <div>
                <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                <div class="text-muted">
                    <i class="bi bi-hash me-1"></i>
                    کد سند: <span class="badge bg-primary">@Model.DocCode</span>
                </div>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary" data-bs-toggle="tooltip" title="بازگشت به لیست">
                <i class="bi bi-arrow-right"></i>
            </a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info" data-bs-toggle="tooltip" title="مشاهده جزئیات">
                <i class="bi bi-eye-fill"></i>
            </a>
        </div>
    </div>

    <!-- هشدار حذف -->
    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
        <div>
            <h5 class="alert-heading mb-1">هشدار حذف!</h5>
            <p class="mb-0">آیا از حذف این مدرک اطمینان دارید؟ این عملیات غیرقابل بازگشت است و تمام اطلاعات مرتبط با آن نیز حذف خواهند شد.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- اطلاعات مدرک -->
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title d-flex align-items-center mb-4">
                        <i class="bi bi-info-circle-fill text-primary me-2"></i>
                        اطلاعات مدرک
                    </h5>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted mb-1">عنوان مدرک</div>
                                <div class="fw-bold">@Model.Title</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted mb-1">توضیحات</div>
                                <div class="fw-bold">@(string.IsNullOrEmpty(Model.Description) ? "بدون توضیحات" : Model.Description)</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted mb-1">دپارتمان</div>
                                <div class="fw-bold">@(Model.Department?.Name ?? "نامشخص")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted mb-1">پروژه</div>
                                <div class="fw-bold">@(Model.Project?.Name ?? "نامشخص")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted mb-1">تاریخ ایجاد</div>
                                <div class="fw-bold">@(Model.DocumentVersions.FirstOrDefault()?.CreationDate.ToString("yyyy/MM/dd") ?? "نامشخص")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted mb-1">ایجاد کننده</div>
                                <div class="fw-bold">@(Model.DocumentVersions.FirstOrDefault()?.Creator?.FullName ?? "نامشخص")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- اطلاعات جانبی -->
        <div class="col-lg-4">
            <!-- آمار -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center mb-3">
                        <i class="bi bi-graph-up text-primary me-2"></i>
                        آمار مدرک
                    </h5>
                    <div class="vstack gap-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">تعداد نسخه‌ها</div>
                            <span class="badge bg-primary">@Model.DocumentVersions?.Count ?? 0</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">تعداد پیوست‌ها</div>
                            <span class="badge bg-info">@(Model.DocumentVersions?.SelectMany(v => v.Attachments)?.Count() ?? 0)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">تعداد کل فایل‌ها</div>
                            <span class="badge bg-secondary">@(Model.DocumentVersions?.SelectMany(v => v.Attachments)?.Count() ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- هشدار مهم -->
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-octagon-fill fs-1 me-3"></i>
                        <div>
                            <h5 class="card-title mb-1">نکته مهم</h5>
                            <p class="card-text mb-0">با حذف این مدرک، تمام نسخه‌ها و پیوست‌های آن نیز حذف خواهند شد.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- فرم حذف -->
    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light">
                <i class="bi bi-x-lg me-1"></i>
                انصراف
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i>
                تأیید حذف
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // فعال‌سازی تولتیپ‌ها
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    placement: 'top'
                });
            });
        });
    </script>
} 