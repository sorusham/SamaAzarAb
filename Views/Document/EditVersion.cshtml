@model MessageForAzarab.Models.DocumentVersion

@{
    ViewData["Title"] = "ویرایش نسخه " + Model.RevisionNumber;
    var baseDocId = Model.BaseDocumentId;
    var baseDocTitle = Model.BaseDocument?.Title ?? "سند نامشخص";
}

<div class="container-fluid fade-in">
    <!-- هدر صفحه -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-pencil-square-fill text-primary fs-1 me-3"></i>
            <div>
                <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                <div class="text-muted">
                    <i class="bi bi-file-text me-1"></i>
                    سند: <span class="badge bg-primary">@baseDocTitle</span>
                </div>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="VersionDetails" asp-route-id="@Model.Id" class="btn btn-outline-info" data-bs-toggle="tooltip" title="مشاهده جزئیات">
                <i class="bi bi-eye-fill"></i>
            </a>
            <a asp-action="Details" asp-route-id="@baseDocId" class="btn btn-outline-secondary" data-bs-toggle="tooltip" title="بازگشت به سند">
                <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>

    <form asp-action="EditVersion" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="BaseDocumentId" />
        <input type="hidden" asp-for="CreatorId" />
        <input type="hidden" asp-for="CreationDate" />
        <input type="hidden" asp-for="IsSent" />
        <input type="hidden" asp-for="RevisionNumber" />

        <div class="row">
            <div class="col-lg-8">
                <!-- فرم اصلی -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-4">
                        @if (!ViewContext.ModelState.IsValid)
                        {
                            <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                                <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                        }

                        <!-- اطلاعات نسخه -->
                        <div class="mb-4">
                            <h5 class="card-title d-flex align-items-center mb-3">
                                <i class="bi bi-sliders text-primary me-2"></i>
                                اطلاعات نسخه
                            </h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="RevisionNumber" class="form-control" readonly disabled />
                                        <label asp-for="RevisionNumber">شماره نسخه</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="AssignedToId" class="form-select">
                                            <option value="">انتخاب کنید...</option>
                                            @foreach (var item in (SelectList)ViewBag.UsersList)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                        <label asp-for="AssignedToId">تخصیص به</label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="AssignedToId"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="Status" class="form-select" required>
                                            <option value="O">باز</option>
                                            <option value="C">بسته</option>
                                        </select>
                                        <label asp-for="Status">وضعیت نسخه <span class="text-danger">*</span></label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="Status"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Progress" type="number" class="form-control" min="0" max="100" step="5" required />
                                        <label asp-for="Progress">درصد پیشرفت <span class="text-danger">*</span></label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="Progress"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="VersionDetails" asp-route-id="@Model.Id" class="btn btn-light">
                                <i class="bi bi-x-lg me-1"></i>
                                انصراف
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>
                                ذخیره تغییرات
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- اطلاعات جانبی -->
            <div class="col-lg-4">
                <!-- وضعیت نسخه -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title d-flex align-items-center mb-3">
                            <i class="bi bi-info-circle-fill text-primary me-2"></i>
                            وضعیت نسخه
                        </h5>
                        <div class="vstack gap-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">وضعیت فعلی</div>
                                <span class="badge @(Model.Status == "O" ? "bg-success-soft text-success" : "bg-danger-soft text-danger")">
                                    <i class="bi @(Model.Status == "O" ? "bi-unlock" : "bi-lock") me-1"></i>
                                    @(Model.Status == "O" ? "باز" : "بسته")
                                </span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">درصد پیشرفت</div>
                                <div class="d-flex align-items-center">
                                    <div class="progress flex-grow-1 me-2" style="height: 6px;">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @(Model.Progress)%" 
                                             aria-valuenow="@Model.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <span class="badge bg-primary">@Model.Progress%</span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">تخصیص یافته به</div>
                                <span class="badge bg-info-soft text-info">
                                    <i class="bi bi-person me-1"></i>
                                    @(Model.AssignedTo?.FullName ?? "بدون تخصیص")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- آمار -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title d-flex align-items-center mb-3">
                            <i class="bi bi-graph-up text-primary me-2"></i>
                            آمار نسخه
                        </h5>
                        <div class="vstack gap-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">تعداد پیوست‌ها</div>
                                <span class="badge bg-primary">@Model.Attachments?.Count ?? 0</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">تعداد فایل‌ها</div>
                                <span class="badge bg-info">@(Model.Attachments?.Count() ?? 0)</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">تاریخ ایجاد</div>
                                <span class="badge bg-secondary">@Model.CreationDate.ToString("yyyy/MM/dd")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- نکات مهم -->
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-lightbulb-fill fs-1 me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">نکته مهم</h5>
                                <p class="card-text mb-0">تغییر وضعیت نسخه از باز به بسته، امکان ویرایش را محدود می‌کند.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // فعال‌سازی تولتیپ‌ها
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    placement: 'top'
                });
            });

            // فعال‌سازی اعتبارسنجی سمت کلاینت
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
} 