@model MessageForAzarab.Models.BaseDocument

@{
    ViewData["Title"] = "ویرایش سند: " + Model.Title;
}

<div class="container-fluid fade-in">
    <!-- هدر صفحه -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-pencil-square-fill text-primary fs-1 me-3"></i>
            <div>
                <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                <div class="text-muted">
                    <i class="bi bi-hash me-1"></i>
                    کد سند: <span class="badge bg-primary">@Model.DocCode</span>
                </div>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary" data-bs-toggle="tooltip" title="بازگشت به لیست">
                <i class="bi bi-arrow-right"></i>
            </a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info" data-bs-toggle="tooltip" title="مشاهده جزئیات">
                <i class="bi bi-eye-fill"></i>
            </a>
        </div>
    </div>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />
        
        <div class="row">
            <div class="col-lg-8">
                <!-- فرم اصلی -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-4">
                        @if (!ViewContext.ModelState.IsValid)
                        {
                            <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                                <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                        }

                        <!-- اطلاعات اصلی سند -->
                        <div class="mb-4">
                            <h5 class="card-title d-flex align-items-center mb-3">
                                <i class="bi bi-card-heading text-primary me-2"></i>
                                اطلاعات اصلی سند
                            </h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="DocCode" class="form-control" placeholder="کد مدرک آذرآبی" required />
                                        <label asp-for="DocCode">کد مدرک آذرآبی <span class="text-danger">*</span></label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="DocCode"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="ClientDocCode" class="form-control" placeholder="کد مدرک کارفرمایی" />
                                        <label asp-for="ClientDocCode">کد مدرک کارفرمایی</label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="ClientDocCode"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Title" class="form-control" placeholder="عنوان کامل سند" required />
                                        <label asp-for="Title">عنوان کامل سند <span class="text-danger">*</span></label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="Title"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea asp-for="Description" class="form-control" style="height: 120px" 
                                                  placeholder="توضیحات اضافی (اختیاری)"></textarea>
                                        <label asp-for="Description">توضیحات اضافی (اختیاری)</label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="Description"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- طبقه‌بندی و وضعیت -->
                        <div class="mb-4">
                            <h5 class="card-title d-flex align-items-center mb-3">
                                <i class="bi bi-folder2-open text-primary me-2"></i>
                                طبقه‌بندی و وضعیت
                            </h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="DepartmentId" class="form-select" required>
                                            <option value="">انتخاب کنید...</option>
                                            @foreach (var item in (SelectList)ViewBag.DepartmentId)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                        <label asp-for="DepartmentId">دپارتمان <span class="text-danger">*</span></label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="DepartmentId"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="ProjectId" class="form-select" required>
                                            <option value="">انتخاب کنید...</option>
                                            @foreach (var item in (SelectList)ViewBag.ProjectId)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                        <label asp-for="ProjectId">پروژه <span class="text-danger">*</span></label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="ProjectId"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="Status" class="form-select" required>
                                            <option value="E">فعال</option>
                                            <option value="D">غیرفعال</option>
                                        </select>
                                        <label asp-for="Status">وضعیت سند <span class="text-danger">*</span></label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="Status"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="IssueStatus" class="form-select" required>
                                            <option value="1">Issuable</option>
                                            <option value="2">NotIssuable</option>
                                            <option value="0">Unknown</option>
                                        </select>
                                        <label asp-for="IssueStatus">وضعیت صدور <span class="text-danger">*</span></label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="IssueStatus"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- بررسی‌کنندگان -->
                        <div class="mb-4">
                            <h5 class="card-title d-flex align-items-center mb-3">
                                <i class="bi bi-people text-primary me-2"></i>
                                بررسی‌کنندگان (اختیاری)
                            </h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="CheckerId" class="form-select">
                                            <option value="">انتخاب کنید...</option>
                                            @foreach (var item in (SelectList)ViewBag.CheckerId)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                        <label asp-for="CheckerId">صحه گذار</label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="CheckerId"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="ApproverId" class="form-select">
                                            <option value="">انتخاب کنید...</option>
                                            @foreach (var item in (SelectList)ViewBag.ApproverId)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                        <label asp-for="ApproverId">تصدیق کننده</label>
                                        <div class="invalid-feedback">
                                            <span asp-validation-for="ApproverId"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light">
                                <i class="bi bi-x-lg me-1"></i>
                                انصراف
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>
                                ذخیره تغییرات
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- اطلاعات جانبی -->
            <div class="col-lg-4">
                <!-- وضعیت سند -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title d-flex align-items-center mb-3">
                            <i class="bi bi-info-circle-fill text-primary me-2"></i>
                            وضعیت سند
                        </h5>
                        <div class="vstack gap-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">وضعیت فعلی</div>
                                <span class="badge @(Model.Status == "E" ? "bg-success-soft text-success" : "bg-danger-soft text-danger")">
                                    <i class="bi @(Model.Status == "E" ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                                    @(Model.Status == "E" ? "فعال" : "غیرفعال")
                                </span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">وضعیت صدور</div>
                                <span class="badge bg-info-soft text-info">
                                    <i class="bi bi-patch-check me-1"></i>
                                    @(Model.IssueStatus == DocumentIssueStatus.NotIssuable ? "غیرقابل صدور" : 
                                      Model.IssueStatus == DocumentIssueStatus.Issuing ? "در حال صدور" :
                                      Model.IssueStatus == DocumentIssueStatus.Issued ? "صادر شده" :
                                      Model.IssueStatus == DocumentIssueStatus.Revoked ? "باطل شده" : "نامشخص")
                                </span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">نسخه فعلی</div>
                                <span class="badge bg-secondary-soft text-secondary">
                                    <i class="bi bi-1-circle me-1"></i>
                                    @Model.CurrentRevision
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- آمار -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title d-flex align-items-center mb-3">
                            <i class="bi bi-graph-up text-primary me-2"></i>
                            آمار سند
                        </h5>
                        <div class="vstack gap-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">تعداد نسخه‌ها</div>
                                <span class="badge bg-primary">@Model.DocumentVersions?.Count ?? 0</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">تعداد پیوست‌ها</div>
                                <span class="badge bg-info">@(Model.DocumentVersions?.SelectMany(v => v.Attachments)?.Count() ?? 0)</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted">تعداد کل فایل‌ها</div>
                                <span class="badge bg-secondary">@(Model.DocumentVersions?.SelectMany(v => v.Attachments)?.Count() ?? 0)</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- نکات مهم -->
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-lightbulb-fill fs-1 me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">نکته مهم</h5>
                                <p class="card-text mb-0">تغییر وضعیت سند ممکن است بر روی نسخه‌های موجود تأثیر بگذارد.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // فعال‌سازی تولتیپ‌ها
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    placement: 'top'
                });
            });

            // فعال‌سازی اعتبارسنجی سمت کلاینت
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
} 