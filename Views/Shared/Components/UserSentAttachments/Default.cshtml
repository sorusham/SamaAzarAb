@model IEnumerable<MessageForAzarab.Models.Attachment>
@using Microsoft.AspNetCore.Mvc.TagHelpers

@if (Model != null && Model.Any())
{
    <div class="list-group list-group-flush">
        @foreach (var attachment in Model.Take(10))
        {
            <a asp-controller="Attachment" asp-action="Details" asp-route-id="@attachment.Id" class="list-group-item list-group-item-action list-group-item-light border-bottom py-3">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <h6 class="mb-1 fw-bold text-primary">
                        <i class="bi bi-send me-2"></i> @attachment.Title
                    </h6>
                    <small class="text-muted">@attachment.DateSent.ToString("yyyy/MM/dd")</small>
                </div>
                <p class="mb-1 ms-4 ps-1"><small>به: @attachment.To</small></p>
                <small class="text-muted ms-4 ps-1">@(attachment.Files?.Count ?? 0) فایل | @(attachment.Revisions?.Count ?? 0) بازنگری</small>
            </a>
        }
        @if (Model.Count() > 10)
        {
            <a asp-controller="Attachment" asp-action="Index" class="list-group-item list-group-item-action text-center text-primary fw-bold py-2">
                <i class="bi bi-folder-symlink me-1"></i> مشاهده همه پیوست‌های ارسالی
            </a>
        }
    </div>
}
else
{
    <div class="alert alert-secondary text-center">
        <i class="bi bi-send-slash fs-4 d-block mb-2"></i>
        شما تاکنون پیوستی ارسال نکرده‌اید.
    </div>
} 