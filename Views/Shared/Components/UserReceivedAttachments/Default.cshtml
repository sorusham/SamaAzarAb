@model IEnumerable<MessageForAzarab.Models.Attachment>

@if (Model != null && Model.Any())
{
    <div class="list-group list-group-flush">
        @foreach (var attachment in Model.Take(10))
        {
            <a asp-controller="Attachment" asp-action="Details" asp-route-id="@attachment.Id" class="list-group-item list-group-item-action border-bottom px-3 py-2">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <h6 class="mb-0 text-primary">
                        <i class="bi bi-paperclip me-2"></i> @(attachment.Title ?? "پیوست بدون عنوان")
                    </h6>
                    <small class="text-muted">@attachment.DateSent.ToString("yyyy/MM/dd")</small>
                </div>
                <small class="d-block text-muted mt-1">
                    <span>از: @(attachment.From ?? "نامشخص")</span>
                    <span class="mx-2">|</span>
                    <span>مشاهده جزئیات</span>
                </small>
            </a>
        }
        @if(Model.Count() > 10)
        {
            <a asp-controller="Attachment" asp-action="Index" class="list-group-item list-group-item-action text-center text-primary fw-bold py-2">مشاهده همه پیوست‌های دریافتی</a>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center border-0">
        <i class="bi bi-info-circle me-2"></i>
        شما تاکنون پیوستی دریافت نکرده‌اید.
    </div>
} 