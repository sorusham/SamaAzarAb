@model IEnumerable<MessageForAzarab.Models.Letter>
@using Microsoft.AspNetCore.Mvc.TagHelpers

@if (Model != null && Model.Any())
{
    <div class="list-group list-group-flush">
        @foreach (var letter in Model.Take(10))
        {
            <a asp-controller="Letters" asp-action="Details" asp-route-id="@letter.Id" class="list-group-item list-group-item-action list-group-item-light border-bottom py-3">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <h6 class="mb-1 fw-bold text-primary">
                        <i class="bi bi-envelope-paper me-2"></i> @letter.Title
                    </h6>
                    <small class="text-muted">@letter.StartDate.ToString("yyyy/MM/dd")</small>
                </div>
                <p class="mb-1 ms-4 ps-1"><small>از: @letter.From</small></p>
                <small class="text-muted ms-4 ps-1">@(letter.Attachments?.Count ?? 0) پیوست</small>
            </a>
        }
        @if (Model.Count() > 10)
        {
            <a asp-controller="Letters" asp-action="Index" class="list-group-item list-group-item-action text-center text-primary fw-bold py-2">
                <i class="bi bi-folder-symlink me-1"></i> مشاهده همه نامه‌های دریافتی
            </a>
        }
    </div>
}
else
{
    <div class="alert alert-secondary text-center">
        <i class="bi bi-envelope-slash fs-4 d-block mb-2"></i>
        شما تاکنون نامه‌ای دریافت نکرده‌اید.
    </div>
} 