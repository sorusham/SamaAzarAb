@using Microsoft.AspNetCore.Identity
@using MessageForAzarab.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <form class="dropdown-item p-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-link dropdown-item text-danger w-100 text-end">
                <i class="bi bi-box-arrow-right me-2"></i>خروج
            </button>
        </form>
    </li>
}
