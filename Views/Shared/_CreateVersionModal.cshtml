@model MessageForAzarab.Models.DocumentVersion

<div class="modal fade" id="createVersionModal" tabindex="-1" aria-labelledby="createVersionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="createVersionModalLabel">
                    <i class="bi bi-plus-circle-fill me-2"></i>
                    ایجاد نسخه جدید
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <form asp-action="CreateVersion" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="modal-body p-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="BaseDocumentId" />
                    
                    @if (!ViewContext.ModelState.IsValid)
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                            <div asp-validation-summary="All"></div>
                        </div>
                    }

                    <!-- اطلاعات نسخه -->
                    <div class="mb-4">
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-file-earmark-text me-2"></i>
                            اطلاعات نسخه
                        </h6>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="RevisionNumber" class="form-control" placeholder="شماره نسخه" readonly />
                                    <label asp-for="RevisionNumber">شماره نسخه</label>
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="RevisionNumber"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="AssignedToId" class="form-select">
                                        <option value="">انتخاب کنید...</option>
                                        @foreach (var item in (SelectList)ViewBag.AssignedToId)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                    <label asp-for="AssignedToId">تخصیص به</label>
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="AssignedToId"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Progress" class="form-control" type="number" min="0" max="100" placeholder="درصد پیشرفت" />
                                    <label asp-for="Progress">درصد پیشرفت (0-100)</label>
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="Progress"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- آپلود فایل -->
                    <div class="mb-4">
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-cloud-upload me-2"></i>
                            آپلود فایل (اختیاری)
                        </h6>
                        
                        <div class="upload-area border-2 border-dashed border-primary rounded-3 p-4 text-center">
                            <div class="upload-icon mb-3">
                                <i class="bi bi-cloud-upload text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h6 class="text-muted mb-2">فایل خود را اینجا بکشید یا کلیک کنید</h6>
                            <p class="text-muted small mb-3">فرمت‌های مجاز: PDF, DOC, DOCX, XLS, XLSX, DWG, DXF</p>
                            <input type="file" name="attachmentFile" class="form-control" accept=".pdf,.doc,.docx,.xls,.xlsx,.dwg,.dxf" />
                            <div class="invalid-feedback">
                                لطفاً یک فایل معتبر انتخاب کنید.
                            </div>
                        </div>
                    </div>

                    <!-- اطلاعات سند پایه -->
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <div>
                            <strong>سند پایه:</strong> @ViewBag.BaseDocumentTitle
                        </div>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg me-1"></i>
                        انصراف
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>
                        ایجاد نسخه
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // فعال‌سازی اعتبارسنجی سمت کلاینت
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // مدیریت آپلود فایل
            const fileInput = document.querySelector('input[type="file"]');
            const uploadArea = document.querySelector('.upload-area');
            
            if (fileInput && uploadArea) {
                // تغییر استایل هنگام انتخاب فایل
                fileInput.addEventListener('change', function() {
                    if (this.files.length > 0) {
                        uploadArea.classList.add('border-success', 'bg-light');
                        uploadArea.classList.remove('border-primary');
                    } else {
                        uploadArea.classList.remove('border-success', 'bg-light');
                        uploadArea.classList.add('border-primary');
                    }
                });

                // کشیدن و رها کردن فایل
                uploadArea.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    this.classList.add('border-success', 'bg-light');
                });

                uploadArea.addEventListener('dragleave', function(e) {
                    e.preventDefault();
                    this.classList.remove('border-success', 'bg-light');
                });

                uploadArea.addEventListener('drop', function(e) {
                    e.preventDefault();
                    this.classList.remove('border-success', 'bg-light');
                    
                    const files = e.dataTransfer.files;
                    if (files.length > 0) {
                        fileInput.files = files;
                        fileInput.dispatchEvent(new Event('change'));
                    }
                });

                // کلیک برای انتخاب فایل
                uploadArea.addEventListener('click', function() {
                    fileInput.click();
                });
            }
        });
    </script>
}