@model MessageForAzarab.Models.ApplicationUser

@{
    ViewData["Title"] = "حذف کاربر";
}

<div class="container fade-in">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        تأیید حذف کاربر
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        آیا از حذف کاربر <strong>@Model.FullName</strong> با نام کاربری <strong>@Model.UserName</strong> اطمینان دارید؟ این عملیات غیرقابل بازگشت است.
                    </div>
                    
                    <dl class="row mt-4">
                        <dt class="col-sm-3 text-md-end">شناسه کاربر:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3 text-md-end">نام کاربری:</dt>
                        <dd class="col-sm-9">@Model.UserName</dd>
                        
                        <dt class="col-sm-3 text-md-end">نام کامل:</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>
                        
                        <dt class="col-sm-3 text-md-end">ایمیل:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                        
                        <dt class="col-sm-3 text-md-end">نوع کاربر:</dt>
                        <dd class="col-sm-9">
                            @switch (Model.UserType)
                            {
                                case MessageForAzarab.Models.UserType.Expert:
                                    <span class="badge bg-info">کارشناس</span>
                                    break;
                                case MessageForAzarab.Models.UserType.Company:
                                    <span class="badge bg-primary">شرکت</span>
                                    break;
                                case MessageForAzarab.Models.UserType.BusinessMember:
                                    <span class="badge bg-success">عضو بازرگانی</span>
                                    break;
                            }
                        </dd>
                        
                        <dt class="col-sm-3 text-md-end">وضعیت:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">فعال</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غیرفعال</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3 text-md-end">تاریخ ثبت‌نام:</dt>
                        <dd class="col-sm-9">@Model.RegisterDate.ToString("yyyy/MM/dd HH:mm")</dd>
                    </dl>
                    
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-return-right me-1"></i>
                                انصراف و بازگشت
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill me-1"></i>
                                تأیید حذف
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 