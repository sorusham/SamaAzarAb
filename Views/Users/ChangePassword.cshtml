@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<div class="container fade-in">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-key-fill me-2"></i>
                        تغییر رمز عبور کاربر
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle-fill"></i>
                        در حال تغییر رمز عبور برای: <strong>@ViewBag.UserName</strong>
                    </div>
                    
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                        <input type="hidden" name="id" value="@ViewBag.UserId" />
                        
                        <div class="mb-4">
                            <label for="newPassword" class="form-label">رمز عبور جدید</label>
                            <input type="password" id="newPassword" name="newPassword" class="form-control" required />
                            <div class="form-text">رمز عبور باید حداقل 6 کاراکتر باشد و شامل حروف بزرگ، کوچک و عدد باشد.</div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-return-right me-1"></i>
                                بازگشت به لیست
                            </a>
                            <button type="submit" class="btn btn-info text-white">
                                <i class="bi bi-check-lg me-1"></i>
                                تغییر رمز عبور
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 