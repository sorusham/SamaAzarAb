@model MessageForAzarab.Models.Letter
@inject Microsoft.AspNetCore.Identity.UserManager<MessageForAzarab.Models.ApplicationUser> UserManager
@inject MessageForAzarab.Services.Interface.IUserService UserService

@{
    ViewData["Title"] = "ویرایش نامه";
    var users = await UserService.GetActiveUsersAsync();
}

<div class="container-fluid fade-in">
    <!-- هدر صفحه -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-envelope-pen-fill text-primary fs-1 me-3"></i>
            <div>
                <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                <div class="text-muted">
                    <i class="bi bi-hash"></i> کد نامه: <span class="badge bg-primary">@Model.Code</span>
                </div>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary" data-bs-toggle="tooltip" title="بازگشت به لیست">
                <i class="bi bi-arrow-right"></i>
            </a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info" data-bs-toggle="tooltip" title="مشاهده جزئیات">
                <i class="bi bi-eye-fill"></i>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- فرم اصلی -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        @if (!ViewContext.ModelState.IsValid)
                        {
                            <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                                <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                        }

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Code" />
                        <input type="hidden" asp-for="SenderId" />
                        <input type="hidden" asp-for="ReceiverId" />

                        <div class="row g-4">
                            <!-- عنوان نامه -->
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="Title" class="form-control" placeholder="عنوان نامه" required />
                                    <label asp-for="Title">عنوان نامه</label>
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="Title"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- فرستنده -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="From" class="form-control bg-light" placeholder="فرستنده" readonly />
                                    <label asp-for="From">فرستنده</label>
                                </div>
                            </div>

                            <!-- گیرنده -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="ReceiverId" class="form-select" required>
                                        <option value="">انتخاب گیرنده...</option>
                                        @foreach (var user in users)
                                        {
                                            <option value="@user.Id" selected="@(user.Id == Model.ReceiverId)">@user.FullName (@user.UserType)</option>
                                        }
                                    </select>
                                    <label asp-for="ReceiverId">گیرنده</label>
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="ReceiverId"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- تاریخ شروع -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="StartDate" type="date" class="form-control" placeholder="تاریخ شروع" 
                                           value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
                                    <label asp-for="StartDate">تاریخ شروع</label>
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="StartDate"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- تاریخ انقضا -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ExpiryDate" type="date" class="form-control" placeholder="تاریخ انقضا" 
                                           value="@Model.ExpiryDate.ToString("yyyy-MM-dd")" required />
                                    <label asp-for="ExpiryDate">تاریخ انقضا</label>
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="ExpiryDate"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- توضیحات -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Description" class="form-control" style="height: 120px" 
                                              placeholder="توضیحات"></textarea>
                                    <label asp-for="Description">توضیحات</label>
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="Description"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="bi bi-x-lg me-1"></i>
                                انصراف
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg me-1"></i>
                                ذخیره تغییرات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- اطلاعات جانبی -->
        <div class="col-lg-4">
            <!-- وضعیت نامه -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-info-circle-fill text-primary me-2"></i>
                        وضعیت نامه
                    </h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="progress flex-grow-1" style="height: 8px;">
                            @{
                                var progress = DateTime.Now > Model.ExpiryDate ? 100 : 
                                    (int)((DateTime.Now - Model.StartDate).TotalDays / (Model.ExpiryDate - Model.StartDate).TotalDays * 100);
                                var progressClass = progress >= 100 ? "danger" : (progress >= 75 ? "warning" : "success");
                            }
                            <div class="progress-bar bg-@progressClass" role="progressbar" 
                                 style="width: @progress%;" aria-valuenow="@progress" 
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <span class="badge bg-@progressClass ms-2">@progress%</span>
                    </div>
                    <div class="text-muted small mt-2">
                        @{
                            var daysLeft = (Model.ExpiryDate - DateTime.Now).Days;
                            if (daysLeft > 0)
                            {
                                <span>@daysLeft روز تا انقضا</span>
                            }
                            else
                            {
                                <span class="text-danger">منقضی شده</span>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- آمار -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-graph-up text-primary me-2"></i>
                        آمار نامه
                    </h5>
                    <div class="vstack gap-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">تعداد پیوست‌ها</div>
                            <span class="badge bg-primary">@Model.Attachments?.Count ?? 0</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">تعداد کل فایل‌ها</div>
                            <span class="badge bg-info">@(Model.Attachments?.SelectMany(a => a.Files)?.Count() ?? 0)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">مدت اعتبار</div>
                            <span class="badge bg-secondary">@((Model.ExpiryDate - Model.StartDate).Days) روز</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- راهنما -->
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-lightbulb-fill fs-1 me-3"></i>
                        <div>
                            <h5 class="card-title mb-1">نکته</h5>
                            <p class="card-text mb-0">برای مدیریت پیوست‌های نامه به صفحه جزئیات مراجعه کنید.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // فعال‌سازی تولتیپ‌ها
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    placement: 'top'
                });
            });

            // فعال‌سازی اعتبارسنجی سمت کلاینت
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // بررسی تاریخ انقضا
            $('#ExpiryDate').change(function() {
                const startDate = new Date($('#StartDate').val());
                const expiryDate = new Date($(this).val());
                
                if (expiryDate <= startDate) {
                    $(this).addClass('is-invalid');
                    $(this).next('.invalid-feedback').text('تاریخ انقضا باید بعد از تاریخ شروع باشد');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
} 