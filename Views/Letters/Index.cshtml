@model IEnumerable<MessageForAzarab.Models.Letter>

@{
    ViewData["Title"] = "نامه‌ها";
}

<div class="container-fluid fade-in">
    <!-- هدر صفحه -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-envelope-fill text-primary fs-2 me-2"></i>
            <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        </div>
        <div class="d-flex gap-2">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary active">
                    <i class="bi bi-grid"></i>
                </button>
                <button type="button" class="btn btn-outline-primary">
                    <i class="bi bi-list"></i>
                </button>
            </div>
            <a asp-action="Create" class="btn btn-primary d-flex align-items-center">
                <i class="bi bi-plus-lg me-1"></i>
                <span>ایجاد نامه جدید</span>
            </a>
        </div>
    </div>

    <!-- فیلترها و جستجو -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="searchTitle" placeholder="جستجو...">
                        <label for="searchTitle">جستجو در عنوان و کد</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <select class="form-select" id="filterStatus">
                            <option value="">همه</option>
                            <option value="active">فعال</option>
                            <option value="expired">منقضی شده</option>
                        </select>
                        <label for="filterStatus">وضعیت</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <select class="form-select" id="filterType">
                            <option value="">همه</option>
                            <option value="sent">ارسالی</option>
                            <option value="received">دریافتی</option>
                        </select>
                        <label for="filterType">نوع نامه</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100 h-100">
                        <i class="bi bi-search me-1"></i> جستجو
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- جدول نامه‌ها -->
    <div class="card shadow-sm">
        <div class="card-header py-3 d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold text-primary">لیست نامه‌ها</h5>
            <div class="dropdown">
                <button class="btn btn-link text-dark p-0" data-bs-toggle="dropdown">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-funnel me-2"></i>همه</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-arrow-up-right me-2"></i>نامه‌های ارسالی</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-arrow-down-left me-2"></i>نامه‌های دریافتی</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-clock-history me-2"></i>نامه‌های منقضی شده</a></li>
                </ul>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="lettersTable" class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0">@Html.DisplayNameFor(model => model.Code)</th>
                            <th class="border-0">@Html.DisplayNameFor(model => model.Title)</th>
                            <th class="border-0">@Html.DisplayNameFor(model => model.From)</th>
                            <th class="border-0">@Html.DisplayNameFor(model => model.To)</th>
                            <th class="border-0">@Html.DisplayNameFor(model => model.StartDate)</th>
                            <th class="border-0">@Html.DisplayNameFor(model => model.ExpiryDate)</th>
                            <th class="border-0 text-center">پیوست‌ها</th>
                            <th class="border-0 text-center" style="width: 120px;">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var isExpired = DateTime.Now > item.ExpiryDate;
                            var statusClass = isExpired ? "text-danger" : "text-success";
                            <tr>
                                <td><span class="badge bg-primary">@item.Code</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-envelope-fill @statusClass me-2"></i>
                                        <div>
                                            <div class="fw-bold">@item.Title</div>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 47) + "..." : item.Description)</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-fill text-primary me-1"></i>
                                        @item.From
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-fill text-success me-1"></i>
                                        @if (string.IsNullOrEmpty(item.To) && item.Receiver?.FullName == null)
                                        {
                                            <span class="text-muted">نامشخص</span>
                                        }
                                        else
                                        {
                                            @item.To
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar-check text-primary me-1"></i>
                                        <span class="date">@item.StartDate.ToString("yyyy/MM/dd")</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar-x @(isExpired ? "text-danger" : "text-primary") me-1"></i>
                                        <span class="date @(isExpired ? "text-danger" : "")">@item.ExpiryDate.ToString("yyyy/MM/dd")</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (item.Attachments != null && item.Attachments.Any())
                                    {
                                        <span class="badge bg-info" data-bs-toggle="tooltip" title="تعداد پیوست‌ها">
                                            <i class="bi bi-paperclip me-1"></i>@item.Attachments.Count()
                                        </span>
    }
    else
    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-1">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-info" 
                                           data-bs-toggle="tooltip" 
                                           title="مشاهده">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-warning" 
                                           data-bs-toggle="tooltip" 
                                           title="ویرایش">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal-@item.Id" 
                                                title="حذف">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </div>

                                    <!-- مدال حذف -->
                                    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header border-0">
                                                    <h5 class="modal-title">
                                                        <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
                                                        تأیید حذف
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body text-center py-4">
                                                    <p class="mb-0">آیا از حذف نامه زیر اطمینان دارید؟</p>
                                                    <div class="mt-3">
                                                        <div class="fw-bold mb-1">@item.Title</div>
                                                        <div class="text-muted">کد: @item.Code</div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer border-0">
                                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">انصراف</button>
                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="bi bi-trash-fill me-1"></i>
                                                            حذف
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // فعال‌سازی تولتیپ‌ها
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    placement: 'top'
                });
            });

            // فعال‌سازی دیتاتیبل
            $('#lettersTable').DataTable({
                language: {
                    url: '/lib/datatables/fa.json'
                },
                order: [[4, 'desc']],
                pageLength: 10,
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rtip'
            });
        });
    </script>
}