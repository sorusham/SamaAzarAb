@model MessageForAzarab.Models.Letter

@{
    ViewData["Title"] = "جزئیات نامه";
}

<div class="container-fluid fade-in">
    <!-- نوار بالای صفحه -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <div class="position-relative me-3">
                <i class="bi bi-envelope-open-fill text-primary fs-1"></i>
                @if (Model?.Attachments?.Any() == true)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @Model.Attachments.Count
                        <span class="visually-hidden">تعداد پیوست‌ها</span>
                    </span>
                }
            </div>
            <div>
                <h1 class="h3 mb-1">@Model?.Title</h1>
                <div class="text-muted">
                    <i class="bi bi-hash"></i> کد نامه: <span class="badge bg-primary">@Model?.Code</span>
                </div>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary" data-bs-toggle="tooltip" title="بازگشت به لیست">
                <i class="bi bi-arrow-right"></i>
            </a>
            @if (Model != null)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning" data-bs-toggle="tooltip" title="ویرایش نامه">
                    <i class="bi bi-pencil-fill me-1"></i>
                    ویرایش
                </a>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAttachmentModal">
                    <i class="bi bi-paperclip me-1"></i>
                    افزودن پیوست
                </button>
            }
        </div>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
            <div>نامه مورد نظر یافت نشد.</div>
        </div>
        return;
    }

    <div class="row">
        <!-- اطلاعات اصلی نامه -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-info-circle-fill me-2"></i>اطلاعات نامه
                    </h5>
                    @{
                        var statusClass = DateTime.Now > Model.ExpiryDate ? "danger" : "success";
                        var statusText = DateTime.Now > Model.ExpiryDate ? "منقضی شده" : "فعال";
                    }
                    <span class="badge bg-@statusClass">@statusText</span>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <i class="bi bi-person-fill text-primary fs-4 me-3"></i>
                                <div>
                                    <div class="text-muted small">فرستنده</div>
                                    <div class="fw-bold">@Model.From</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <i class="bi bi-person-fill text-success fs-4 me-3"></i>
                                <div>
                                    <div class="text-muted small">گیرنده</div>
                                    <div class="fw-bold">@(string.IsNullOrEmpty(Model.To) ? "نامشخص" : Model.To)</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <i class="bi bi-calendar-check text-primary fs-4 me-3"></i>
                                <div>
                                    <div class="text-muted small">تاریخ شروع</div>
                                    <div class="fw-bold">@Model.StartDate.ToString("yyyy/MM/dd")</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <i class="bi bi-calendar-x @(DateTime.Now > Model.ExpiryDate ? "text-danger" : "text-primary") fs-4 me-3"></i>
                                <div>
                                    <div class="text-muted small">تاریخ انقضا</div>
                                    <div class="fw-bold @(DateTime.Now > Model.ExpiryDate ? "text-danger" : "")">
                                        @Model.ExpiryDate.ToString("yyyy/MM/dd")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-4">
                            <h6 class="text-muted mb-3">توضیحات:</h6>
                            <div class="bg-light p-3 rounded">
                                <p class="mb-0">@Model.Description</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- پیوست‌ها -->
            <div class="card shadow-sm">
                <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-paperclip me-2"></i>پیوست‌ها
                        @if (Model.Attachments.Any())
                        {
                            <span class="badge bg-primary ms-2">@Model.Attachments.Count</span>
                        }
                    </h5>
                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addAttachmentModal">
                        <i class="bi bi-plus-lg me-1"></i>افزودن
                    </button>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Attachments.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-file-earmark-x text-muted fs-1"></i>
                            <p class="text-muted mt-2 mb-0">هیچ پیوستی وجود ندارد</p>
                        </div>
                    }
                    else
                    {
                        <div class="accordion" id="attachmentsAccordion">
                            @foreach (var attachment in Model.Attachments)
                            {
                                <div class="accordion-item border-0 border-bottom">
                                    <h2 class="accordion-header" id="heading@(attachment.Id)">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                                data-bs-target="#collapse@(attachment.Id)" aria-expanded="false" 
                                                aria-controls="collapse@(attachment.Id)">
                                            <div class="d-flex align-items-center w-100">
                                                <div class="me-3">
                                                    <i class="bi bi-file-earmark-text-fill text-primary fs-4"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <div class="fw-bold">@attachment.Title</div>
                                                    <div class="small text-muted">
                                                        <i class="bi bi-clock me-1"></i>
                                                        @attachment.DateSent.ToString("yyyy/MM/dd HH:mm")
                                                    </div>
                                                </div>
                                                <div class="d-flex gap-2">
                                                    @if (attachment.Files.Any())
                                                    {
                                                        <span class="badge bg-primary" data-bs-toggle="tooltip" title="تعداد فایل‌ها">
                                                            <i class="bi bi-files me-1"></i>@attachment.Files.Count
                                                        </span>
                                                    }
                                                    @if (attachment.Revisions.Any())
                                                    {
                                                        <span class="badge bg-info" data-bs-toggle="tooltip" title="تعداد بازنگری‌ها">
                                                            <i class="bi bi-clock-history me-1"></i>@attachment.Revisions.Count
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </button>
                                    </h2>
                                    <div id="collapse@(attachment.Id)" class="accordion-collapse collapse" 
                                         data-bs-parent="#attachmentsAccordion">
                                        <div class="accordion-body bg-light">
                                            @if (!string.IsNullOrEmpty(attachment.Description))
                                            {
                                                <div class="mb-4">
                                                    <h6 class="text-muted mb-2">توضیحات:</h6>
                                                    <p class="mb-0">@attachment.Description</p>
                                                </div>
                                            }

                                            @if (attachment.Files.Any())
                                            {
                                                <div class="table-responsive">
                                                    <table class="table table-sm align-middle mb-0">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th style="width: 50px;"></th>
                                                                <th>نام فایل</th>
                                                                <th>نوع</th>
                                                                <th>حجم</th>
                                                                <th style="width: 120px;">عملیات</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var file in attachment.Files)
                                                            {
                                                                <tr>
                                                                    <td class="text-center">
                                                                        <i class="bi bi-file-earmark text-primary"></i>
                                                                    </td>
                                                                    <td>@file.OriginalFileName</td>
                                                                    <td>
                                                                        <span class="badge bg-secondary">@file.FileType</span>
                                                                    </td>
                                                                    <td>@(file.FileSize / 1024) KB</td>
                                                                    <td>
                                                                        <div class="d-flex gap-1">
                                                                            <a href="@Url.Action("DownloadFile", "Attachment", new { id = file.Id })" 
                                                                               class="btn btn-sm btn-outline-primary"
                                                                               data-bs-toggle="tooltip"
                                                                               title="دانلود">
                                                                                <i class="bi bi-download"></i>
                                                                            </a>
                                                                            <button type="button"
                                                                                    class="btn btn-sm btn-outline-danger"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target="#deleteFileModal-@file.Id"
                                                                                    title="حذف">
                                                                                <i class="bi bi-trash"></i>
                                                                            </button>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- اطلاعات جانبی -->
        <div class="col-lg-4">
            <!-- وضعیت نامه -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">وضعیت نامه</h6>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="progress flex-grow-1" style="height: 8px;">
                            @{
                                var progress = DateTime.Now > Model.ExpiryDate ? 100 : 
                                    (int)((DateTime.Now - Model.StartDate).TotalDays / (Model.ExpiryDate - Model.StartDate).TotalDays * 100);
                                var progressClass = progress >= 100 ? "danger" : (progress >= 75 ? "warning" : "success");
                            }
                            <div class="progress-bar bg-@progressClass" role="progressbar" 
                                 style="width: @progress%;" aria-valuenow="@progress" 
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <span class="badge bg-@progressClass ms-2">@progress%</span>
                    </div>
                    <div class="text-muted small mt-2">
                        @{
                            var daysLeft = (Model.ExpiryDate - DateTime.Now).Days;
                            if (daysLeft > 0)
                            {
                                <span>@daysLeft روز تا انقضا</span>
                            }
                            else
                            {
                                <span class="text-danger">منقضی شده</span>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- آمار -->
            <div class="row g-3">
                <div class="col-sm-6 col-lg-12">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">تعداد پیوست‌ها</h6>
                                    <h3 class="mb-0">@Model.Attachments.Count</h3>
                                </div>
                                <i class="bi bi-paperclip fs-1 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-12">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">تعداد کل فایل‌ها</h6>
                                    <h3 class="mb-0">@Model.Attachments.SelectMany(a => a.Files).Count()</h3>
                                </div>
                                <i class="bi bi-files fs-1 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- مدال افزودن پیوست -->
<div class="modal fade" id="addAttachmentModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="bi bi-paperclip me-2"></i>
                    افزودن پیوست جدید
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddAttachment" method="post" enctype="multipart/form-data">
                <input type="hidden" name="letterId" value="@Model.Id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">عنوان پیوست</label>
                        <input type="text" class="form-control" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">توضیحات</label>
                        <textarea class="form-control" name="description" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">فایل‌ها</label>
                        <input type="file" class="form-control" name="files" multiple required>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>
                        افزودن
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // فعال‌سازی تولتیپ‌ها
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    placement: 'top'
                });
            });
        });
    </script>
}