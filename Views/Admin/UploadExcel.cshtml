@{
    ViewData["Title"] = "آپلود فایل اکسل";
}

<div class="container-fluid fade-in">
    <div class="row mb-4">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-excel me-2"></i>
                        آپلود فایل اکسل
                    </h5>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["Warning"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" enctype="multipart/form-data" asp-action="UploadExcel" id="uploadForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label">
                                        <i class="fas fa-building me-1"></i>
                                        دپارتمان <span class="text-danger">*</span>
                                    </label>
                                    <select name="departmentId" class="form-select" required id="departmentSelect">
                                        <option value="">انتخاب کنید...</option>
                                        @foreach (var dept in ViewBag.Departments)
                                        {
                                            <option value="@dept.Id">@dept.Name</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback">
                                        لطفاً دپارتمان را انتخاب کنید.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label">
                                        <i class="fas fa-project-diagram me-1"></i>
                                        پروژه <span class="text-danger">*</span>
                                    </label>
                                    <select name="projectId" class="form-select" required id="projectSelect">
                                        <option value="">انتخاب کنید...</option>
                                        @foreach (var proj in ViewBag.Projects)
                                        {
                                            <option value="@proj.Id">@proj.Name</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback">
                                        لطفاً پروژه را انتخاب کنید.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="fas fa-file-excel me-1"></i>
                                فایل اکسل <span class="text-danger">*</span>
                            </label>
                            <div class="file-upload-wrapper">
                                <input type="file" name="file" class="form-control" accept=".xls,.xlsx" required id="fileInput" />
                                <div class="file-upload-info mt-2">
                                    <div class="form-text text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        فقط فایل‌های اکسل (.xls یا .xlsx) قابل قبول هستند. حداکثر حجم: 10 مگابایت
                                    </div>
                                    <div class="file-preview mt-2" id="filePreview" style="display: none;">
                                        <div class="alert alert-success">
                                            <i class="fas fa-check-circle me-2"></i>
                                            <span id="fileName"></span> انتخاب شد
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="invalid-feedback">
                                لطفاً یک فایل اکسل انتخاب کنید.
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>
                                راهنمای آپلود فایل اکسل
                            </h6>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-primary">ستون‌های مورد نیاز:</h6>
                                    <ul class="mb-0">
                                        <li>نام مدرک (ستون D)</li>
                                        <li>کد آذرآب (ستون F)</li>
                                        <li>کد فروشنده (ستون G)</li>
                                        <li>شماره مدرک (ستون H)</li>
                                        <li>اعلان (ستون I)</li>
                                        <li>تاریخ مدرک (ستون J)</li>
                                        <li>تاریخ برنامه (ستون K)</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-primary">نکات مهم:</h6>
                                    <ul class="mb-0">
                                        <li>داده‌ها از ردیف 4 شروع می‌شوند</li>
                                        <li>فرمت تاریخ: yyyy/mm/dd</li>
                                        <li>حداکثر 1000 رکورد در هر بار</li>
                                        <li>پیش‌نمایش قبل از وارد کردن</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-primary btn-lg" id="uploadBtn">
                                <i class="fas fa-upload me-2"></i>
                                آپلود و پیش‌نمایش
                            </button>
                            <div class="text-muted">
                                <i class="fas fa-clock me-1"></i>
                                زمان تقریبی: 30 ثانیه
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // File input change handler
            $('#fileInput').on('change', function() {
                const file = this.files[0];
                if (file) {
                    // Validate file type
                    const allowedTypes = ['application/vnd.ms-excel', 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'];
                    const fileExtension = file.name.split('.').pop().toLowerCase();
                    
                    if (!['xls', 'xlsx'].includes(fileExtension)) {
                        Swal.fire({
                            icon: 'error',
                            title: 'خطا',
                            text: 'لطفاً فقط فایل‌های اکسل (.xls یا .xlsx) انتخاب کنید.',
                            confirmButtonText: 'باشه'
                        });
                        this.value = '';
                        return;
                    }
                    
                    // Validate file size (10MB)
                    const maxSize = 10 * 1024 * 1024; // 10MB in bytes
                    if (file.size > maxSize) {
                        Swal.fire({
                            icon: 'error',
                            title: 'خطا',
                            text: 'حجم فایل نمی‌تواند بیش از 10 مگابایت باشد.',
                            confirmButtonText: 'باشه'
                        });
                        this.value = '';
                        return;
                    }
                    
                    // Show file preview
                    $('#fileName').text(file.name);
                    $('#filePreview').show();
                    
                    // Enable upload button
                    $('#uploadBtn').prop('disabled', false);
                } else {
                    $('#filePreview').hide();
                    $('#uploadBtn').prop('disabled', true);
                }
            });
            
            // Form validation
            $('#uploadForm').on('submit', function(e) {
                let isValid = true;
                
                // Validate department
                if (!$('#departmentSelect').val()) {
                    $('#departmentSelect').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#departmentSelect').removeClass('is-invalid');
                }
                
                // Validate project
                if (!$('#projectSelect').val()) {
                    $('#projectSelect').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#projectSelect').removeClass('is-invalid');
                }
                
                // Validate file
                if (!$('#fileInput')[0].files.length) {
                    $('#fileInput').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#fileInput').removeClass('is-invalid');
                }
                
                if (!isValid) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'هشدار',
                        text: 'لطفاً تمام فیلدهای الزامی را پر کنید.',
                        confirmButtonText: 'باشه'
                    });
                    return false;
                }
                
                // Show loading state
                $('#uploadBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>در حال پردازش...');
                
                // Show progress message
                Swal.fire({
                    title: 'در حال پردازش...',
                    text: 'لطفاً صبر کنید، فایل در حال آپلود و پردازش است.',
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
            });
            
            // Remove validation classes on change
            $('#departmentSelect, #projectSelect, #fileInput').on('change', function() {
                $(this).removeClass('is-invalid');
            });
            
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
} 