@model MessageForAzarab.Models.ImportResult
@{
    ViewData["Title"] = "نتیجه وارد کردن داده‌ها";
}

<div class="container-fluid fade-in">
    <div class="row mb-4">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-import me-2"></i>
                        نتیجه وارد کردن داده‌ها
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.IsSuccess)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>عملیات با موفقیت انجام شد!</strong>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>عملیات با خطا مواجه شد!</strong>
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-check-circle fa-3x mb-3"></i>
                                    <h4>@Model.SuccessCount</h4>
                                    <p class="mb-0">رکورد موفق</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-times-circle fa-3x mb-3"></i>
                                    <h4>@Model.ErrorCount</h4>
                                    <p class="mb-0">رکورد خطا</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-list fa-3x mb-3"></i>
                                    <h4>@(Model.SuccessCount + Model.ErrorCount)</h4>
                                    <p class="mb-0">کل رکوردها</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.ErrorMessages.Any())
                    {
                        <div class="alert alert-warning">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                پیام‌های خطا
                            </h6>
                            <hr>
                            <ul class="mb-0">
                                @foreach (var error in Model.ErrorMessages)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (Model.SuccessCount > 0)
                    {
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>
                                اطلاعات تکمیلی
                            </h6>
                            <hr>
                            <p class="mb-0">
                                <i class="fas fa-clock me-1"></i>
                                زمان انجام عملیات: @DateTime.Now.ToString("yyyy/MM/dd HH:mm:ss")
                            </p>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("UploadExcel")" class="btn btn-primary">
                            <i class="fas fa-upload me-2"></i>
                            آپلود فایل جدید
                        </a>
                        <a href="@Url.Action("Index", "Document")" class="btn btn-secondary">
                            <i class="fas fa-list me-2"></i>
                            مشاهده اسناد
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide success messages after 5 seconds
            if ($('.alert-success').length > 0) {
                setTimeout(function() {
                    $('.alert-success').fadeOut();
                }, 5000);
            }
            
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}