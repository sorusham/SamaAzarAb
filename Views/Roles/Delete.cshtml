@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "حذف نقش";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        تأیید حذف نقش
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        آیا از حذف نقش <strong>@Model.Name</strong> اطمینان دارید؟ این عملیات غیرقابل بازگشت است.
                    </div>
                    
                    <dl class="row mt-3">
                        <dt class="col-sm-3">شناسه نقش:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">نام نقش:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                    </dl>
                    
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-right"></i>
                                انصراف و بازگشت
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill me-1"></i>
                                تأیید حذف
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 