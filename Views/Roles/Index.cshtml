@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "مدیریت نقش‌ها";
}

<div class="container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mt-2">
            <i class="bi bi-shield-lock-fill text-primary"></i>
            مدیریت نقش‌های سیستم
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i>
            ایجاد نقش جدید
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">لیست نقش‌ها</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>شناسه</th>
                                <th>نام نقش</th>
                                <th class="text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Id</td>
                                    <td>@role.Name</td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil-fill"></i>
                                                ویرایش
                                            </a>
                                            <a asp-action="ManageUsers" asp-route-roleId="@role.Id" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-people-fill"></i>
                                                مدیریت کاربران
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash-fill"></i>
                                                حذف
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle-fill"></i>
                    هیچ نقشی تعریف نشده است. با استفاده از دکمه «ایجاد نقش جدید» یک نقش جدید ایجاد کنید.
                </div>
            }
        </div>
    </div>
</div> 