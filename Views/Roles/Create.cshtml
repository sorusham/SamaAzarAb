@{
    ViewData["Title"] = "ایجاد نقش جدید";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-plus"></i>
                        ایجاد نقش جدید
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label for="roleName" class="form-label">نام نقش</label>
                            <input type="text" id="roleName" name="roleName" class="form-control" required placeholder="مثال: Manager" />
                            <div class="form-text">نام نقش باید منحصر به فرد باشد و بدون فاصله نوشته شود.</div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-right"></i>
                                بازگشت به لیست
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg"></i>
                                ایجاد نقش
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 