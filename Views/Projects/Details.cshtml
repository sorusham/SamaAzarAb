@model MessageForAzarab.Models.Project

@{
    ViewData["Title"] = "جزئیات پروژه";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">
            <i class="bi bi-clipboard-data me-2 text-primary"></i>جزئیات پروژه
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="bi bi-pencil"></i> ویرایش
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-right"></i> بازگشت به لیست
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light py-3">
            <h6 class="m-0 fw-bold text-primary">اطلاعات پروژه</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">نام پروژه:</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">کد پروژه:</dt>
                <dd class="col-sm-9">@Model.ProjectCode</dd>
                
                <dt class="col-sm-3">وضعیت:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                        @(Model.IsActive ? "فعال" : "غیرفعال")
                    </span>
                </dd>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <dt class="col-sm-3">توضیحات:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                }
            </dl>
        </div>
    </div>

    @if (Model.Documents != null && Model.Documents.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light py-3">
                <h6 class="m-0 fw-bold text-primary">اسناد مرتبط</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>کد سند</th>
                                <th>عنوان</th>
                                <th>دپارتمان</th>
                                <th>وضعیت</th>
                                <th>نسخه فعلی</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var document in Model.Documents)
                            {
                                <tr>
                                    <td>@document.DocCode</td>
                                    <td>@document.Title</td>
                                    <td>@(document.Department?.Name ?? "-")</td>
                                    <td>
                                        <span class="badge @(document.Status == "E" ? "bg-success" : "bg-danger")">
                                            @(document.Status == "E" ? "فعال" : "غیرفعال")
                                        </span>
                                    </td>
                                    <td>@document.CurrentRevision</td>
                                    <td>
                                        <a asp-controller="Document" asp-action="Details" asp-route-id="@document.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> مشاهده
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
} 