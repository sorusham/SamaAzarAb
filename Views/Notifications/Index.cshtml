@model List<MessageForAzarab.Models.Notification>

@{
    ViewData["Title"] = "اعلان‌ها";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        @if (Model.Any(n => !n.IsRead))
        {
            <form asp-action="MarkAllAsRead" method="post">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-check-all"></i> علامت‌گذاری همه به عنوان خوانده شده
                </button>
            </form>
        }
    </div>

    <div class="row">
        <div class="col-md-10 mx-auto">
            @if (Model.Any())
            {
                <div class="list-group">
                    @foreach (var notification in Model)
                    {
                        <div style=" box-shadow: -1px 1px 20px 10px rgb(86 86 183); margin: 20px;" class="list-group-item list-group-item-action @(notification.IsRead ? "" : "active")">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    @{
                                        var icon = notification.Type switch
                                        {
                                            NotificationType.NewLetter => "bi-envelope-fill",
                                            NotificationType.NewAttachment => "bi-paperclip",
                                            NotificationType.NewRevision => "bi-pencil-fill",
                                            NotificationType.LetterExpirySoon => "bi-alarm-fill",
                                            _ => "bi-info-circle-fill"
                                        };
                                    }
                                    <i class="bi @icon me-2"></i>
                                    @notification.Title
                                </h5>
                                <small>@notification.CreatedAt.ToString("yyyy/MM/dd HH:mm")</small>
                            </div>
                            <p class="mb-1">@notification.Message</p>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <div>
                                    @if (!string.IsNullOrEmpty(notification.Link))
                                    {
                                        <a style="margin: 10px; box-shadow: inset -1px 1px 20px 3px rgb(36 34 40); " href="@notification.Link" class="btn btn-sm btn-primary" >
                                            <i class="bi bi-box-arrow-up-right"></i> مشاهده
                                        </a>
                                    }
                                </div>
                                <div>
                                    @if (!notification.IsRead)
                                    {
                                        <form asp-action="MarkAsRead" asp-route-id="@notification.Id" method="post" class="d-inline" style="margin-top: 10px; ">
                                            <button type="submit" class="btn btn-sm btn-outline-secondary m-6 p-2" style="background:aliceblue ; box-shadow: -1px 1px 20px 10px rgb(86 86 183);">
">
                                                <i class="bi bi-check"></i> خوانده شد
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-bell-slash fs-1 d-block mb-3"></i>
                    <p>هیچ اعلانی وجود ندارد</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // به‌روزرسانی شمارنده اعلان‌ها در نوار بالا
        function updateNotificationCounter() {
            $.ajax({
                url: '@Url.Action("GetUnreadCount", "Notifications")',
                type: 'GET',
                success: function (data) {
                    $('#notificationCount').text(data.count);
                    if (data.count > 0) {
                        $('#notificationCounter').show();
                    } else {
                        $('#notificationCounter').hide();
                    }
                }
            });
        }
        
        // اجرای تابع به‌روزرسانی شمارنده در زمان بارگذاری صفحه
        $(document).ready(function () {
            updateNotificationCounter();
        });
    </script>
} 